    <Style BasedOn="{StaticResource ShinyBlueFlowDocumentStyle}" TargetType="{x:Type FlowDocument}"/>
    
    
    <Style x:Key="ShinyBlueTextBlockStyle"
           TargetType="{x:Type TextBlock}">
        <Setter Property="TextWrapping"
                Value="NoWrap"/>
        <Setter Property="TextTrimming"
                Value="None"/>
        <Setter Property="Foreground" Value="{StaticResource DefaultTextBrushKey.ShinyRed}"/>      
    </Style>
    <Style BasedOn="{StaticResource ShinyBlueTextBlockStyle}" TargetType="{x:Type TextBlock}"/>
    
    <Style x:Key="{x:Type Bold}"
