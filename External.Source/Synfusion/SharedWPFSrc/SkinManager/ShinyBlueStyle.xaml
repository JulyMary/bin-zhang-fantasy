    <Style BasedOn="{StaticResource ShinyBlueFlowDocumentPageViewerStyle}" TargetType="{x:Type FlowDocumentPageViewer}"/>

    <Style x:Key="ShinyBlueFlowDocumentReaderStyle" TargetType="{x:Type FlowDocumentReader}">
