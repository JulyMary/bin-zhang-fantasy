        <Setter Property="local:Clock.MinuteHandPressedBrush" Value="{StaticResource HourHandMouseOverColor}"/>
        <Setter Property="local:Clock.SecondHandPressedBrush" Value="{StaticResource HourHandMouseOverColor}"/>

        <Setter Property="local:Clock.AMPMSelectorButtonsBackground" Value="{StaticResource AMPMButtonBackground}"/>
        <Setter Property="local:Clock.AMPMSelectorButtonsBorderBrush" Value="{StaticResource AMPMButtonBackground}"/>
        <Setter Property="local:Clock.AMPMSelectorBorderBrush" Value="{StaticResource TextBoxBorder}"/>
        <Setter Property="local:Clock.AMPMSelectorButtonsArrowBrush" Value="{StaticResource ArrowFill}"/>
        <Setter Property="local:Clock.AMPMMouseOverButtonsArrowBrush" Value="{StaticResource ArrowFill}"/>
        <Setter Property="local:Clock.AMPMMouseOverButtonsBorderBrush" Value="{StaticResource AMPMButtonMouseOverBorder}"/>
        <Setter Property="local:Clock.AMPMMouseOverButtonsBackground" Value="{StaticResource AMPMButtonMouseOverBackground}"/>
        <Setter Property="local:Clock.AMPMSelectorBackground" Value="{StaticResource TextBoxBackground}"/>
        <Setter Property="local:Clock.AMPMSelectorForeground" Value="{StaticResource TextBlockForeground}"/>

        <Setter Property="local:Clock.FrameBorderBrush" Value="{StaticResource ClockPanelBorderColor}"/>
        <Setter Property="local:Clock.FrameInnerBorderBrush" Value="{StaticResource ClockPanelInnerBorderColor}"/>
        <Setter Property="local:Clock.FrameBackground" Value="{StaticResource ClockPanelBackgroundColor}"/>
        <!--<Setter Property="FirstBorderFrameRadius" Value="151"/>-->
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="ClockCornerRadius" Value="90"/>
        <!--<Setter Property="SecondInnerBorderFrameRadius" Value="135"/>
        <Setter Property="ThirdBorderFrameRadius" Value="122"/>-->
        <Setter Property="InnerBorderThickness" Value="2"/>
        <Setter Property="DialBorderThickness" Value="25"/>
        <Setter Property="FrameCornerRadius" Value="0"/>
        <Setter Property="FrameInnerBorderThickness" Value="1"/>
        <Setter Property="local:Clock.AMPMSelectorCornerRadius" Value="0"/>
        <!--<Setter Property="CenteredEllipseRadius" Value="10"/>-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Clock}">
                    <Border Name="FrameBorder" Background="{Binding Path=FrameInnerBorderBrush, RelativeSource={RelativeSource AncestorType={x:Type local:Clock}}}" BorderBrush="{Binding Path=FrameBorderBrush, RelativeSource={RelativeSource AncestorType={x:Type local:Clock}}}" Style="{StaticResource FrameBorderStyle}">
