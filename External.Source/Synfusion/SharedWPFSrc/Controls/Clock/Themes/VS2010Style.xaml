        <GradientStop Color="#5D9DA9" Offset="0.5" />
        <GradientStop Color="#7FBCC7" Offset="0" />
    </LinearGradientBrush>

    <RadialGradientBrush x:Key="VS2010.SecondBorderFrameRadialBrush" >
        <RadialGradientBrush.GradientStops>
            <GradientStop Color="#8EB1B9" Offset="1" />
            <GradientStop Color="#C0D1D5" Offset="0.9" />
        </RadialGradientBrush.GradientStops>
    </RadialGradientBrush>

    <LinearGradientBrush x:Key="VS2010.SecondInnerBorderFrameColor" StartPoint="0,0" EndPoint="1,1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="#C3E2E9" Offset="0"/>
            <GradientStop Color="#FCFDFD" Offset="0.2"/>
            <GradientStop Color="#F3F9FA" Offset="0.4"/>
            <GradientStop Color="#D7E1E2" Offset="1"/>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="VS2010.SecondBorderFrameColor" StartPoint="0,0" EndPoint="1,1">
