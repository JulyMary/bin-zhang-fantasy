            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>
    <DrawingImage x:Key="closesilver">
        <DrawingImage.Drawing>
            <DrawingGroup>
                <DrawingGroup.Children>
                    <GeometryDrawing Brush="#00454444" Geometry="F1 M 1.99893,1.68693L 17.9989,1.68693L 17.9989,17.6869L 1.99893,17.6869L 1.99893,1.68693 Z "/>
                    <GeometryDrawing Brush="#bb454444" Geometry="F1 M 16.3216,5.5436L 12.2909,5.5436L 10.0003,7.7516L 7.70027,5.5436L 3.67627,5.5436L 7.94427,9.7236L 3.67627,13.8303L 7.84427,13.8303L 10.0003,11.7276L 12.1483,13.8303L 16.3189,13.8303L 12.0483,9.7236L 16.3216,5.5436 Z "/>
                </DrawingGroup.Children>
