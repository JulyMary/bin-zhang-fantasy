    <LinearGradientBrush x:Key="ButtonAdvPressedBorderBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFAF8A8C" Offset="0"/>
        <GradientStop Color="#FF714D4E" Offset="0.482"/>
        <GradientStop Color="#FF5D3839" Offset="0.752"/>
        <GradientStop Color="#FFFECEAC" Offset="1"/>
