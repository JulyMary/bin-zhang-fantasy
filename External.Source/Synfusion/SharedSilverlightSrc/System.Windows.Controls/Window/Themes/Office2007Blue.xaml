    <Style TargetType="local:WindowControl" x:Key="Office2007BlueWindowControlStyle">
        <Setter Property="BorderThickness" Value="6 0 6 6"/>
        <Setter Property="BorderBrush" Value="{StaticResource TitleBarBackground}"/>
        <Setter Property="CloseButtonStyle" Value="{StaticResource CloseButtonStyle}"/>
        <Setter Property="MaximizeButtonStyle" Value="{StaticResource MaximizeButtonStyle}"/>
        <Setter Property="MinimizeButtonStyle" Value="{StaticResource MinimizeButtonStyle}"/>
        <Setter Property="RestoreButtonStyle" Value="{StaticResource RestoreButtonStyle}"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TitleBarForeground" Value="#FF857ABD"/>
        <Setter Property="TitleBarBackground" Value="{StaticResource TitleBarBackground}"/>
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="300"/>
        <Setter Property="Title" Value="Untitled"/>
        <Setter Property="Icon" Value="/Syncfusion.Shared.Silverlight;Component/System.Windows.Controls/Window/Images/Default_Icon.png"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:WindowControl">
                    <Grid x:Name="PART_LayoutGrid">
                        <Grid.Resources>
                            <Storyboard x:Key="Close_Animation" Duration="0:0:1" SpeedRatio="5">
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Opacity)" From="1" To="0" />
                            </Storyboard>

                            <Storyboard x:Key="Open_Animation" Duration="0:0:1" SpeedRatio="5">
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Opacity)" From="0" To="1" />
                            </Storyboard>

                            <Storyboard x:Key="Overlay_Animation" SpeedRatio="8">
                                <DoubleAnimationUsingKeyFrames    
                                            Storyboard.TargetProperty="(UIElement.Opacity)">
                                    <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0" />
                                    <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0.2" />
                                    <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0.4" />
                                    <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0.6" />
                                    <LinearDoubleKeyFrame Value="0" KeyTime="0:0:1" />
                                    <LinearDoubleKeyFrame Value="1" KeyTime="0:0:1.2" />
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>

                            <local:SizeToDoubleConverter x:Key="SizeConverter"/>
                        </Grid.Resources>
                        <Border Background="Black" CornerRadius="8" BorderThickness="0" BorderBrush="Transparent">
                            <Border.Effect>
                                <BlurEffect Radius="8"/>
                            </Border.Effect>
                        </Border>
                        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5">
                            <Border Name="_Border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                                <Grid x:Name="PART_Root">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="28"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="1" Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="Black" >
                                        <ContentPresenter />
                                    </Border>
                                    <ContentControl x:Name="PART_Client" Grid.Row="1" />

                                    <Border x:Name="PART_Resizegrip" Visibility="Collapsed" Background="Transparent" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="3">
                                        <Grid Background="Transparent" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                            <Path Fill="White"
										Data="M 9,1 L 11,1 L 11,3 L 9,3 Z M 5,5 L 7,5 L 7,7 L 5,7 Z M 9,5 L 11,5 L 11,7 L 9,7 Z M 1,9 L 3,9 L 3,11 L 1,11 Z M 5,9 L 7,9 L 7,11 L 5,11 Z M 9,9 L 11,9 L 11,11 L 9,11 Z"
										/>

                                            <Path  Fill="Gray"
										Data="M 8,0 L 10,0 L 10,2 L 8,2 Z M 4,4 L 6,4 L 6,6 L 4,6 Z M 8,4 L 10,4 L 10,6 L 8,6 Z M 0,8 L 2,8 L 2,10 L 0,10 Z M 4,8 L 6,8 L 6,10 L 4,10 Z M 8,8 L 10,8 L 10,10 L 8,10 Z"
										 />
                                            <Thumb x:Name="PART_ResizeGripThumb" Opacity="0.0" Cursor="SizeNWSE"/>
                                        </Grid>
                                    </Border>
                                    <Border x:Name="PART_Title" Background="{TemplateBinding TitleBarBackground}">
                                        <context:ContextMenuAdvService.ContextMenuAdv>
                                            <context:ContextMenuAdv x:Name="PART_Context">
                                                <context:ContextMenuItemAdv Header="{Binding Source={StaticResource ResourceWrapperKey}, Path=Restore}" x:Name="PART_Restore">
                                                    <context:ContextMenuItemAdv.Icon>
                                                        <ContentControl Content="2" FontFamily="Webdings"/>
                                                    </context:ContextMenuItemAdv.Icon>
                                                </context:ContextMenuItemAdv>
                                                <context:ContextMenuItemAdv Header="{Binding Source={StaticResource ResourceWrapperKey}, Path=Move}" x:Name="PART_Move">

                                                </context:ContextMenuItemAdv>
                                                <context:ContextMenuItemAdv Header="{Binding Source={StaticResource ResourceWrapperKey}, Path=Sized}" x:Name="PART_Size">

                                                </context:ContextMenuItemAdv>
                                                <context:ContextMenuItemAdv Header="{Binding Source={StaticResource ResourceWrapperKey}, Path=Minimize}" x:Name="PART_Minimize">
                                                    <context:ContextMenuItemAdv.Icon>
                                                        <ContentControl Content="0" FontFamily="Webdings"/>
                                                    </context:ContextMenuItemAdv.Icon>
                                                </context:ContextMenuItemAdv>
                                                <context:ContextMenuItemAdv Header="{Binding Source={StaticResource ResourceWrapperKey}, Path=Maximize}" x:Name="PART_Maximize">
                                                    <context:ContextMenuItemAdv.Icon>
                                                        <ContentControl Content="1" FontFamily="Webdings"/>
                                                    </context:ContextMenuItemAdv.Icon>
                                                </context:ContextMenuItemAdv>
                                                <context:SeparatorAdv />
                                                <context:ContextMenuItemAdv FontWeight="Bold" x:Name="PART_Close">
                                                    <context:ContextMenuItemAdv.Header>
                                                        <Grid Width="100">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition />
                                                                <ColumnDefinition />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Text="{Binding Source={StaticResource ResourceWrapperKey}, Path=Close}"/>
                                                            <!--<TextBlock Text="Alt+F4" HorizontalAlignment="Right" Grid.Column="1"/>-->
                                                        </Grid>
                                                    </context:ContextMenuItemAdv.Header>
                                                    <context:ContextMenuItemAdv.Icon>
                                                        <ContentControl Content="r" FontFamily="Webdings" FontWeight="Bold"/>
                                                    </context:ContextMenuItemAdv.Icon>
                                                </context:ContextMenuItemAdv>
                                            </context:ContextMenuAdv>
                                        </context:ContextMenuAdvService.ContextMenuAdv>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Image Source="{TemplateBinding Icon}" Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IconSize, Converter={StaticResource SizeConverter}, ConverterParameter=width}" 
                                                  Height="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IconSize, Converter={StaticResource SizeConverter}, ConverterParameter=height}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2"/>
                                            <ContentControl Content="{TemplateBinding Title}" Background="Transparent" Grid.Column="1" Foreground="{TemplateBinding TitleBarForeground}" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <Thumb Grid.ColumnSpan="2" Opacity="0" x:Name="PART_TitleThumb" />
                                            <Border Grid.Column="2" Margin="0 -8 0 0" Background="Transparent" CornerRadius="0" Height="28" Width="Auto" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal">

                                                    <Button x:Name="PART_MinimizeButton" Height="20" Width="30" HorizontalAlignment="Right" Style="{TemplateBinding MinimizeButtonStyle}" VerticalAlignment="Center">
                                                        <ToolTipService.ToolTip>
                                                            Minimize
                                                        </ToolTipService.ToolTip>

                                                    </Button>
                                                    <Button x:Name="PART_RestoreButton" Visibility="Collapsed" Height="20" Width="30" HorizontalAlignment="Right" Style="{TemplateBinding RestoreButtonStyle}" VerticalAlignment="Top" Margin="0,6,0,0">
                                                        <ToolTipService.ToolTip>
                                                            Restore
                                                        </ToolTipService.ToolTip>

                                                    </Button>
                                                    <Button x:Name="PART_MaximizeButton" Height="20" Width="30" HorizontalAlignment="Right" Style="{TemplateBinding MaximizeButtonStyle}" VerticalAlignment="Center" Margin="0,3,0,0">
                                                        <ToolTipService.ToolTip>
                                                            Maximize
                                                        </ToolTipService.ToolTip>

                                                    </Button>
                                                    <Button x:Name="PART_CloseButton" Height="20" Width="35" HorizontalAlignment="Right"  Style="{TemplateBinding CloseButtonStyle}" VerticalAlignment="Center" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0,3,0,0">
                                                        <ToolTipService.ToolTip>
                                                            Close
                                                        </ToolTipService.ToolTip>

                                                    </Button>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </Border>
                        <Thumb x:Name="PART_Top" Height="5" VerticalAlignment="Top" Opacity="0" Cursor="SizeNS" Margin="0,1,0,0"/>
                        <Thumb x:Name="PART_Right" Width="5" HorizontalAlignment="Right" Cursor="SizeWE" Opacity="0" Margin="0,0,4,0"/>
                        <Thumb x:Name="PART_Bottom" Height="5" VerticalAlignment="Bottom" Cursor="SizeNS" Margin="0,0,0,4" Opacity="0"/>
                        <Thumb x:Name="PART_Left" Width="5" HorizontalAlignment="Left" Cursor="SizeWE" Opacity="0" Margin="4,0,0,0"/>

                        <Thumb x:Name="PART_TopLeft" HorizontalAlignment="Left" VerticalAlignment="Top" Cursor="SizeNWSE" Background="Red" Opacity="0" Width="8" Height="8"/>
                        <Thumb x:Name="PART_TopRight" HorizontalAlignment="Right" VerticalAlignment="Top" Cursor="SizeNESW" Background="Red" Opacity="0" Width="8" Height="8"/>
                        <Thumb x:Name="PART_BottomLeft" HorizontalAlignment="Left" VerticalAlignment="Bottom" Cursor="SizeNESW" Background="Red" Opacity="0" Width="8" Height="8"/>
                        <Thumb x:Name="PART_BottomRight" HorizontalAlignment="Right" VerticalAlignment="Bottom" Cursor="SizeNWSE" Background="Red" Opacity="0" Width="8" Height="8"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:WindowControl" BasedOn="{StaticResource Office2007BlueWindowControlStyle}"/>


        <Style TargetType="local:MessageContent">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:MessageContent">
                    <Grid >
                        <Grid.Resources>
                            <local:EnumToImageConverter x:Key="ImageConverter"/>
                            <local:EnumToVisibilityConverter x:Key="VisibilityConverter"/>
                            <local:EnumToTextConverter x:Key="TextConverter"/>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Image Source="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DialogIcon, Converter={StaticResource ImageConverter}}" Width="32" Height="32" Margin="20 0 0 0" HorizontalAlignment="Left"
                                   VerticalAlignment="Center" Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DialogIcon, Converter={StaticResource VisibilityConverter}}"/>
                            <TextBlock Grid.Column="1" Text="{TemplateBinding Message}" Margin="15 20"
                                       HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            <TextBox Grid.Column="1" Grid.Row="1" x:Name="PART_Prompt" Margin="10 0 10 10" VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="22" VerticalContentAlignment="Center"/>
                            <TextBlock Text="{TemplateBinding PromptText}" Grid.Row="1" Margin="10 0 0 0" HorizontalAlignment="Right"/>
                        </Grid>
                        <Border Grid.Row="1" Background="#FFF0F0F0">
                            <Grid HorizontalAlignment="Right" VerticalAlignment="Center" Margin="120 10 10 10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="PART_Ok" Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DialogButton, Converter={StaticResource TextConverter}, ConverterParameter=1}" Grid.Column="1" Margin="5" Padding="2" Width="70" Height="22" VerticalAlignment="Bottom"/>
                                <Button x:Name="PART_Cancel" Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DialogButton, Converter={StaticResource TextConverter}, ConverterParameter=2}" Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DialogButton, Converter={StaticResource VisibilityConverter}, ConverterParameter=2}" Grid.Column="2" Margin="5" Padding="2" Width="70" Height="22" VerticalAlignment="Bottom"/>
                                <Button x:Name="PART_Apply" Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DialogButton, Converter={StaticResource TextConverter}, ConverterParameter=3}" Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DialogButton, Converter={StaticResource VisibilityConverter}, ConverterParameter=3}" Grid.Column="3" Margin="5" Padding="2" Width="70" Height="22" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
