                                                            <Path x:Name="DisabledVisualElement" Fill="{StaticResource DisabledBackgroundBrushKey}" Stretch="Fill" Stroke="{StaticResource GlyphBrushKey}" UseLayoutRounding="False" Data="M20.500004,0.5 L20.500004,8.5 L13.591003,4.5 z M0.5,0.5 L8.2729988,4.5 L0.5,8.5 z"/>
