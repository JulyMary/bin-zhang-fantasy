<UserControl x:Class="Fantasy.Studio.BusinessEngine.CodeEditing.EntityScriptEditingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:Fantasy.Studio.BusinessEngine.CodeEditing"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <l:TextEditor x:Name="csEditor" IsReadOnly="{Binding IsContentReadOnly, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                  SyntaxHighlighting="{Binding SyntaxHighlighting, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}" ></l:TextEditor>
</UserControl>
