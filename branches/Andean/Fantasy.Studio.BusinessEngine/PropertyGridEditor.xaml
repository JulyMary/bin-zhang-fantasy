<UserControl x:Class="Fantasy.Studio.BusinessEngine.PropertyGridEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:f="urn:schema-fantasy:xaml"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:win="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms" f:EnhancedFocusScope.IsEnhancedFocusScope="True" FocusManager.FocusedElement="{Binding ElementName=propertyGridHost}">
    <WindowsFormsHost Name="propertyGridHost">
        <win:PropertyGrid x:Name="propertyGrid" Dock="Fill"  />
    </WindowsFormsHost>
</UserControl>
