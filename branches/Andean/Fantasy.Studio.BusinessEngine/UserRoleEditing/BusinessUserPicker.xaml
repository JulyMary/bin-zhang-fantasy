<Window x:Class="Fantasy.Studio.BusinessEngine.UserRoleEditing.BusinessUserPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     
        Title="Select User" Height="600" Width="800" xmlns:f="urn:schema-fantasy:xaml">
    <Grid>
        <f:ExtendableTreeView DataContext="{Binding TreeViewModel}" Margin="12,12,12,41" Name="extendableTreeView" SelectedItemChanged="extendableTreeView_SelectedItemChanged" MouseDoubleClick="extendableTreeView_MouseDoubleClick" />
        <Button Content="OK" Margin="0,0,93,12" Name="OkButton" IsDefault="True" Click="OkButton_Click" HorizontalAlignment="Right" Width="75" Height="23" VerticalAlignment="Bottom">
            <Button.Style>
                <Style TargetType="Button" >
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedItem}" Value="{x:Null}">
                            <Setter Property="IsEnabled" Value="False" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button Content="Cancel" Margin="0,0,12,12" Name="CancelButton" IsCancel="True" Click="CancelButton_Click" HorizontalAlignment="Right" Width="75" Height="23" VerticalAlignment="Bottom" />
    </Grid>
</Window>
