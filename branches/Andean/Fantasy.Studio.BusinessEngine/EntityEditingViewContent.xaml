<UserControl x:Class="Fantasy.Studio.BusinessEngine.EntityEditingViewContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" >
   <TabControl Name="panelContainer" TabStripPlacement="Bottom" ItemsSource="{Binding EditingPanels}" SelectionChanged="panelContainer_SelectionChanged">
        <TabControl.ItemContainerStyle>
            <Style TargetType="TabItem" >
                <Setter Property="Header" Value="{Binding Title}" />
                <Setter Property="Content" Value="{Binding Element}" />
               
                <Setter Property="Visibility" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.TabStripVisibility}" />
            </Style>
        </TabControl.ItemContainerStyle>

    </TabControl>
</UserControl>
