@model Fantasy.Jobs.Web.Models.RunningJobsModel
<input type="hidden" value="@Model.Version" id="runingJobsVersion" />
<table style="width:100%;" class="t-widget t-grid" border="0" cellpadding="5" cellspacing="0">
   <thead class="t-grid-header" style="height:30px;">
       <tr>
           <td></td>
           <td>Template</td>
           <td>Name</td>
           <td>Creation Time</td>
           <td>Application</td>
           <td>User</td>
           <td>StartTime</td>
           <td>Priority</td>
       </tr>
   </thead>
   <tbody>
       @{bool alternative = false;
         string trclass;}
       @foreach (JobModel item in this.Model.Jobs)
       {
           trclass = alternative ? "" : "t-alt";
           <tr class="@trclass">
               <td style="border-bottom:1px solid #454545;"><a href="@Url.Action("Details", "Job", new { id = item.MetaData.Id  })"><img border="0" alt="Running" src="@Fantasy.Jobs.Web.Controllers.JobStateImageHelper.GetImageUrl(this.Url, Fantasy.Jobs.JobState.Running)" class="imgingrid" /></a></td>
               <td style="border-bottom:1px solid #454545;">@item.MetaData.Template</td>
               <td style="border-bottom:1px solid #454545;">@item.MetaData.Name</td>
               <td style="border-bottom:1px solid #454545;">@item.MetaData.CreationTime</td>
               <td style="border-bottom:1px solid #454545;">@item.MetaData.Application</td>
               <td style="border-bottom:1px solid #454545;">@item.MetaData.User</td>
               <td style="border-bottom:1px solid #454545;">@item.MetaData.StartTime</td>
               <td style="border-bottom:1px solid #454545;">@item.MetaData.Priority</td>
           </tr>
           <tr class="@trclass">
               <td colspan="2">
               <div class="runningjobs-progress" id="@String.Format("progress{0}", item.MetaData.Id)" initValue="@item.Progress">
               <div class="runningjobs-progress-text">@item.Progress%</div>
               <div class="runningjobs-progress-bar"  ></div>
               </div></td>
               <td colspan="6"><span class="runningjobs-status" id="@String.Format("status{0}", item.MetaData.Id)">@item.Status</span></td>
           </tr>
           alternative = !alternative;
       }
   </tbody>
</table>