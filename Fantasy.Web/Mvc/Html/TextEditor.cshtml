@inherits Fantasy.Web.Mvc.Html.BusinessPropertyEditorBase
@{
    this.Html.HtmlAssets().AddStyleSheet(this.Url.ThemedContent("~/Content/themes/{0}/texteditor/style.css"));
    this.Html.HtmlAssets().AddScript(this.Url.Content("~/Scripts/Mvc/Html/TextEditor.js"));
}

@if(this.PropertyDescriptor.CanRead || this.Model.Accessbility != Fantasy.Web.Accessbility.Collapsed)
{

<span @WriteAttributes() data-bind="visible:@string.Format("{0}Accessbility() != 'collpased'", this.PropertyDescriptor.CodeName)">
    @if (this.PropertyDescriptor.CanWrite)
    {
        <input type="text" name="@this.Attributes["name"]" data-bind="value : @this.PropertyDescriptor.CodeName,visible: @string.Format("{0}Accessbility() == 'editable'", this.PropertyDescriptor.CodeName)"  />
    } 
    @if (this.PropertyDescriptor.CanRead)
    {
         <span data-bind="text : @this.PropertyDescriptor.CodeName, visible:@string.Format("{0}Accessbility() == 'visible'", this.PropertyDescriptor.CodeName)" ></span>
    }
    
</span> 
}
