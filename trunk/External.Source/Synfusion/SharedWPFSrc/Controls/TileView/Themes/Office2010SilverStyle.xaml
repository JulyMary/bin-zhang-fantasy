                            </Canvas>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="OuterBorder" Property="Background" Value="{StaticResource Office2010SilverTileViewItemMouseOverBackground}"/>
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="{StaticResource Office2010SilverTileViewItemMouseOverBorderBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="OuterBorder" Property="Background" Value="{StaticResource Office2010SilverTileViewItemPressedBackground}"/>
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="{StaticResource Office2010SilverTileViewItemPressedBorderBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


