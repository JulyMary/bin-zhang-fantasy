                        </Trigger>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter Property="Visibility" TargetName="minButton" Value="Collapsed"/>
                            <Setter Property="Visibility" TargetName="maxButton" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="outerBorder" Value="{StaticResource Office2010SilverTileViewItemMouseOverBackground}"/>
                            <Setter Property="BorderBrush" TargetName="outerBorder" Value="{StaticResource Office2010SilverTileViewItemMouseOverBorderBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="outerBorder" Value="{StaticResource Office2010SilverTileViewItemPressedBackground}"/>
                            <Setter Property="BorderBrush" TargetName="outerBorder" Value="{StaticResource Office2010SilverTileViewItemPressedBorderBrush}"/>
