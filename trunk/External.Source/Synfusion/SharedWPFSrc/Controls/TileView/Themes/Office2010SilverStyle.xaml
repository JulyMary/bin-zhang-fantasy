    <!-- Office2010Silver Brushes -->

    <LinearGradientBrush x:Key="Office2010SilverTileViewItemHeaderBackground" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFF6F8FB" Offset="0.252"/>
        <GradientStop Color="#FFE9ECEF" Offset="0.863"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="Office2010SilverTileViewItemHeaderBorderBrush" Color="#FFBBBFC4"/>
    <SolidColorBrush x:Key="Office2010SilverTileViewItemHeaderForeground" Color="#FF3B3B3B" />
    <SolidColorBrush x:Key="Office2010SilverTileViewItemForeground" Color="#FF1E395B" />

    <LinearGradientBrush x:Key="Office2010SilverTileViewItemBackground" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFE8ECF0"/>
        <GradientStop Color="#FFDADEE3" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="Office2010SilverTileViewItemBorderBrush" Color="#FFBBBFC4"/>


    <SolidColorBrush x:Key="Office2010SilverTileViewItemMouseOverBackground" Color="#FFFFE7A2"/>

    <SolidColorBrush x:Key="Office2010SilverTileViewItemMouseOverBorderBrush" Color="#FFFFBD69"/>

    <SolidColorBrush x:Key="Office2010SilverTileViewItemPressedBackground" Color="#FFFB8C3C"/>

    <SolidColorBrush x:Key="Office2010SilverTileViewItemPressedBorderBrush" Color="Transparent"/>

    <LinearGradientBrush x:Key="BorderFillBrushKey" EndPoint="0.443,0.511" StartPoint="0.443,0.022">
        <GradientStop Color="#FFF4F9FF" Offset="0.136"/>
        <GradientStop Color="#FFE6F0FA" Offset="0.491"/>
        <GradientStop Color="#FFE4EFFB" Offset="0.982"/>
        <GradientStop Color="#FFCDDAEA" Offset="0.991"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Office2010SilverMouseOverBackground" EndPoint="0.848,0.936" StartPoint="0.181,0.093">
        <GradientStop Color="#FF74787D" Offset="0"/>
        <GradientStop Color="#FF373C41" Offset="1"/>
