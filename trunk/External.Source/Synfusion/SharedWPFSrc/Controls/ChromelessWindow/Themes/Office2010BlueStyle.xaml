            <Trigger Property="IsMouseOver" Value="true">
                <Setter TargetName="resborder" Property="Background" Value="{StaticResource Office2010BlueMouseOverBackground}"/>
                <Setter TargetName="resborder" Property="BorderBrush" Value="{StaticResource Office2010BlueMouseOverBorderBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="true">
                <Setter TargetName="resborder" Property="Background" Value="{StaticResource Office2010BluePressedBackground}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
	
