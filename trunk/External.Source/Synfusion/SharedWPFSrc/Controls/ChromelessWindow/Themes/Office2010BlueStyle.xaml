            <Trigger Property="IsMouseOver" Value="true">
                <Setter TargetName="closeborder" Property="Background" Value="{StaticResource Office2010BlueMouseOverBackground}"/>                   
                <Setter TargetName="closeborder" Property="BorderBrush" Value="{StaticResource Office2010BlueMouseOverBorderBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="true">
                <Setter TargetName="closeborder" Property="Background" Value="{StaticResource Office2010BluePressedBackground}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
	
	<ControlTemplate x:Key="Office2010BlueTitleBarTemplate" TargetType="{x:Type local:TitleBar}">
        <Border Name="border"  Height="30"  CornerRadius="5,5,0,0" Background="{StaticResource Office2010BlueTitleBarBackground}" >
            <Border BorderBrush="{StaticResource Office2010BlueTitleBarBorderBrush}" Background="Transparent" BorderThickness="0,0,0,1" Width="Auto" CornerRadius="5,5,0,0">
                <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Bottom"  Margin="0,0,0,0"/>
            </Border>
        </Border>
    </ControlTemplate>
	
    <Style x:Key="Office2010BlueChromelessWindowStyle" TargetType="{x:Type local:ChromelessWindow}" >
        <!--<Setter Property="AllowsTransparency" Value="true" />-->
        <Setter Property="ResizeGripStyle" Value="{StaticResource ResizeStyle}"/>
        <Setter Property="WindowStyle" Value="None" />       
        <Setter Property="ResizeBorderThickness" Value="2" />       
        <Setter Property="SnapsToDevicePixels" Value="False"/>     
        <Setter Property="Icon" Value="..\Resources\app.png"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>   
        <Setter Property="ResizeBorderBrush" Value="{StaticResource OrangeRedBorderBrush}" />       
        <Setter Property="Foreground" Value="{StaticResource Office2010BlueForeground}"/>
        <Setter Property="MinWidth" Value="300"/>
        <Setter Property="MinHeight" Value="120"/>
        <!--<Setter Property="Focusable" Value="False"/>-->
      
                <Setter Property="TitleBarBackground" Value="{StaticResource Office2010BlueTitleBarBackground}"/>
                <Setter Property="Background" Value="{StaticResource Office2010BlueBackground}"/>
                <Setter Property="ResizeBorderBrush" Value="{StaticResource Office2010BlueBorderBrush}"/>
                <Setter Property="MinimizeButtonTemplate" Value="{StaticResource MinimizeBlue}"/>
                <Setter Property="MaximizeButtonTemplate" Value="{StaticResource MaximizeBlue}"/>
                <Setter Property="RestoreButtonTemplate" Value="{StaticResource RestoreBlue}"/>
                <Setter Property="CloseButtonTemplate" Value="{StaticResource CloseBlue}"/>
                <Setter Property="TitleBarTemplate" Value="{StaticResource Office2010BlueTitleBarTemplate}"/>
                <Setter Property="Foreground" Value="{StaticResource BlueText}"/>
                <Setter Property="Template" Value="{StaticResource SkinTemp}"/>                   
    </Style>

	<Style BasedOn="{StaticResource Office2010BlueChromelessWindowStyle}" TargetType="{x:Type local:ChromelessWindow}" />
	
</ResourceDictionary>