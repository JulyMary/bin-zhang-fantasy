                <Path Stretch="Fill" Fill="#FF525565" Data="F1 M 653.498,306.494L 653.498,309.494L 658.498,309.494L 658.498,306.494L 653.498,306.494 Z M 657.498,308.479L 654.498,308.479L 654.498,307.479L 657.498,307.479L 657.498,308.479 Z " Height="3" Width="5" Canvas.Left="3" Canvas.Top="2.961"/>
            </Canvas>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter TargetName="maxborder" Property="Background" Value="{StaticResource Office2010BlueMouseOverBackground}"/>
                <Setter TargetName="maxborder" Property="BorderBrush" Value="{StaticResource Office2010BlueMouseOverBorderBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="true">
                <Setter TargetName="maxborder" Property="Background" Value="{StaticResource Office2010BluePressedBackground}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
	
	<ControlTemplate x:Key="RestoreBlue" TargetType="{x:Type Button}">
        <Border Name="resborder"   BorderThickness="1" CornerRadius="0" Background="Transparent" Margin="0,2,0,2" Height="25" Width="25" SnapsToDevicePixels="True">
            <Canvas Height="10" VerticalAlignment="Center" Width="11" SnapsToDevicePixels="True" HorizontalAlignment="Center" Margin="2,0,0,0">
                <Path Stretch="Fill" Fill="#FF505860" Data="F1 M 789.584,341.962L 789.584,348.375L 790.504,348.375L 790.504,349.295L 796.917,349.295L 796.917,341.962L 789.584,341.962 Z M 794.171,346.548L 792.345,346.548L 792.345,345.628L 794.171,345.628L 794.171,346.548 Z " Height="7.333"  Width="7.333" Canvas.Left="3.667"/>
                <Path Stretch="Fill" Fill="#FFDADEE1" Data="F1 M 790.504,342.882L 790.504,348.403L 796.026,348.403L 796.026,342.882L 790.504,342.882 Z M 794.164,346.548L 792.338,346.548L 792.338,345.628L 794.164,345.628L 794.164,346.548 Z " Height="5.522"  Width="5.522" Canvas.Left="4.587" Canvas.Top="0.92"/>
