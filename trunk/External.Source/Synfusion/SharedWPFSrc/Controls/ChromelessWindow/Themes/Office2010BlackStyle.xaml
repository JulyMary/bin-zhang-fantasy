            </Trigger>
            <Trigger Property="IsPressed" Value="true">
                <Setter TargetName="closeborder" Property="Background" Value="{StaticResource Office2010BlackPressedBackground}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="Office2010BlackTitleBarTemplate" TargetType="{x:Type local:TitleBar}">
        <Border Name="border"  Height="30"  CornerRadius="5,5,0,0" Background="{StaticResource Office2010BlackTitleBarBackground}">
            <Border BorderBrush="{StaticResource Office2010BlackTitleBarBorderBrush}" Background="Transparent" BorderThickness="0,0,0,1" Width="Auto" CornerRadius="5,5,0,0">
                <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Bottom"  Margin="0,0,0,0"/>
            </Border>
        </Border>
    </ControlTemplate>

    <Style x:Key="Office2010BlackChromelessWindowStyle" TargetType="{x:Type local:ChromelessWindow}" >       
        <Setter Property="ResizeGripStyle" Value="{StaticResource ResizeStyle}"/>
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="ResizeBorderThickness" Value="2" />
        <Setter Property="SnapsToDevicePixels" Value="False"/>
        <Setter Property="Icon" Value="..\Resources\app.png"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="ResizeBorderBrush" Value="{StaticResource OrangeRedBorderBrush}" />      
        <Setter Property="MinWidth" Value="300"/>
        <Setter Property="MinHeight" Value="120"/>       

        <Setter Property="TitleBarBackground" Value="{StaticResource Office2010BlackTitleBarBackground}"/>
        <Setter Property="Background" Value="{StaticResource Office2010BlackBackground}"/>
        <Setter Property="ResizeBorderBrush" Value="{StaticResource Office2010BlackBorderBrush}"/>
        <Setter Property="MinimizeButtonTemplate" Value="{StaticResource MinimizeBlack}"/>
        <Setter Property="MaximizeButtonTemplate" Value="{StaticResource MaximizeBlack}"/>
        <Setter Property="RestoreButtonTemplate" Value="{StaticResource RestoreBlack}"/>
        <Setter Property="CloseButtonTemplate" Value="{StaticResource CloseBlack}"/>
        <Setter Property="TitleBarTemplate" Value="{StaticResource Office2010BlackTitleBarTemplate}"/>
        <Setter Property="Foreground" Value="{StaticResource Office2010BlackForeground}"/>
        <Setter Property="Template" Value="{StaticResource SkinTemp}"/>
    </Style>

    <Style BasedOn="{StaticResource Office2010BlackChromelessWindowStyle}" TargetType="{x:Type local:ChromelessWindow}" />

</ResourceDictionary>