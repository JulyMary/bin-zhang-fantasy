        <Border Name="minborder"   BorderThickness="1" CornerRadius="2" Background="Transparent" Margin="0,2,0,2" Height="25" Width="25" SnapsToDevicePixels="True">
            <Path Data="M0.5,0.5 L8.5,0.5 L8.5,2.5 L0.5,2.5 z" Fill="#FFDADEE1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="3" Margin="2,0,0,0" Stretch="Fill" Stroke="#FF505860" Width="9" />
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter TargetName="minborder" Property="Background" Value="{StaticResource Office2010BlackMouseOverBackground}"/>
                <Setter TargetName="minborder" Property="BorderBrush" Value="{StaticResource Office2010BlackMouseOverBorderBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="true">
                <Setter TargetName="minborder" Property="Background" Value="{StaticResource Office2010BlackPressedBackground}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

