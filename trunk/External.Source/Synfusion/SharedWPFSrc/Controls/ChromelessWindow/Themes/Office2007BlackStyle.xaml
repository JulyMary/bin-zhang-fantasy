                </DrawingGroup.Children>
            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>
    <DrawingImage x:Key="maximizeblack">
        <DrawingImage.Drawing>
            <DrawingGroup>
                <DrawingGroup.Children>
                    <GeometryDrawing Brush="#00454444" Geometry="F1 M 2.25178,2.33578L 18.2518,2.33578L 18.2518,18.3358L 2.25178,18.3358L 2.25178,2.33578 Z "/>
                    <GeometryDrawing Brush="#E1E1E1" Geometry="F1 M 15.2364,13.0744L 5.26578,13.0744L 5.26578,9.35044L 15.2364,9.35044M 3.96044,14.0411L 16.5431,14.0411L 16.5431,6.63044L 3.96044,6.63044L 3.96044,14.0411 Z "/>
                </DrawingGroup.Children>
            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>
    <DrawingImage x:Key="restoreblack">
        <DrawingImage.Drawing>
            <DrawingGroup>
                <DrawingGroup.Children>
                    <GeometryDrawing Brush="#00454444" Geometry="F1 M 2.36733,1.93244L 18.3673,1.93244L 18.3673,17.9324L 2.36733,17.9324L 2.36733,1.93244 Z "/>
                    <GeometryDrawing Brush="#E1E1E1" Geometry="F1 M 15.0973,10.9544L 13.8053,10.9544L 13.8053,8.25711L 15.0973,8.25711M 12.8613,12.8798L 5.63733,12.8798L 5.63733,10.1824L 12.8613,10.1824M 16.044,6.28511L 6.928,6.28511L 6.928,8.21044L 4.69067,8.21044L 4.69067,13.5798L 13.8053,13.5798L 13.8053,11.6558L 16.044,11.6558L 16.044,6.28511 Z "/>
                </DrawingGroup.Children>
            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>
