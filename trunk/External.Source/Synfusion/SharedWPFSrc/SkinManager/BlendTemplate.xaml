    <ControlTemplate TargetType="{x:Type TabItem}" x:Key="BlendTabItemTemplate">
        <Grid Margin="2,2,2,0" SnapsToDevicePixels="true">
            <Border Name="Bd" Height="23" >
                <Border Name="MainButton"
                             Margin="-1,0,-1,0"
